{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es6",
      "jsx": "react",
      "esModuleInterop": true,
      "strictNullChecks": true,
      "allowJs": true,
      "checkJs": false,
    },
    "include": [
      "./src/**/*"
    ],
    "rules": {
      "quotemark": [
        true,
        "single"
      ]
    }
  }